<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dorado</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>

    <style name="DescCoche" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextRecView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>
    <style name="Button" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="background">@color/dorado</item>
        <item name="cornerRadius">20sp</item>
    </style>
